
@import "../utils/coupon/coupon.wxss";
@import "../utils/turntable_lottery/turntable_lottery.wxss";

/* page/goods/index.wxss */
page {
  display: flex;
  flex-direction: column;
  height: 100%;
}
/* 直接设置swiper属性 */
swiper {
  height:300px;
width:300px;
margin:10px auto;

}
swiper-item image {
  width: 100%;
  height: 100%;
}
.detail {
  display: flex;
  flex-direction: column;
  margin-top: 15rpx;
  margin-bottom: 0rpx;
}
.detail .title {
  font-size: 40rpx;
  margin: 10rpx;
  color: black;
  text-align: justify;
}
.detail .price {
  color: red;
  font-size: 40rpx;
  margin: 10rpx;
}
.line_flag {
  width: 80rpx;
  height: 1rpx;
  display: inline-block;
  margin: 20rpx auto;
  background-color: gainsboro;
  text-align: center;
}
.line {
  width: 100%;
  height: 2rpx;
  display: inline-block;
  margin: 20rpx 0rpx;
  background-color: gainsboro;
  text-align: center;
}
.detail-nav {
  display: flex;
  flex-direction: row;
  align-items: center;
  float: left;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  right: 0;
  z-index: 1;
  width: 100%;
  height: 100rpx;
}
.button-green {
  background-color: #4caf50; /* Green */
}
.button-red {
  background-color: #f44336; /* 红色 */
}
.image_detail {
  width: 100%;
}
button {
  color: white;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 30rpx;
  border-radius: 0rpx;
  width: 50%;
  height: 100%;
  line-height: 100rpx;
}
.detail-nav image {
  width: 70rpx;
  height: 50rpx;
  margin: 20rpx 40rpx;
}
.line_nav {
  width: 5rpx;
  height: 100%;
  background-color: gainsboro;
}
/* 占位 */
.temp {
  height: 100rpx;
}
text {
  display: block;
  font-size: 30rpx;
  margin: 10rpx;
}
.text-remark {
  display: block;
  font-size: 25rpx;
  margin: 10rpx;
}

.detail{
  padding:0 8px;
}
.coupon{
  margin-top:10px;
  padding:0 8px;
  margin-bottom:15px;
}


/*wechatTX*/
.stock{
  font-size:15px;
  color:#999;
  margin-left:10px;
}
.product-dec{
  font-size:14px;
  font-family: Roboto,Arial,Helvetica,Microsoft Yahei,微软雅黑,SimSun,宋体,sans-serif;
}
.product-header{
  font-size:14px;
  font-weight:bold;
  padding:4px 0;
  border-bottom:1px solid #ddd;
}

.product-spec{
  padding-left:4px;
}
.product-spec-color view{
  font-weight:bold;
  margin-bottom:5px;
}
.product-spec-color view>text{
  display:inline;
}
.product-spec-color image{
  display:inline-block;
  width:35px;
  height:35px;
  margin-right:10px;
  border:1px solid #ddd;
  padding:2px;
}
.product-spec-color image.selected{
  border:2px solid #c30d22;
}
.product-spec-size{
  margin-left:4px;
  padding-top:5px;
  border-top:1px solid #ddd;
}
.product-spec-size>text{
  display:inline-block;
  width:30px;
  height:30px;
  margin-right:10px;
  border:1px solid #ddd;
  text-align :center;
  line-height :30px;
}
.product-spec-size>text.selected{
  border:1px solid #c30d22;
}